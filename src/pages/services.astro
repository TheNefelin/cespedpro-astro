          {data.content}
        </p>
        <div class="badge badge-lg badge-success text-white mt-6">
          游 Pet Friendly
        </div>
      </section>

      <!-- Servicios Principales -->
      <section class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {data.services.map(item => (
          <div class="card bg-white shadow-xl hover:shadow-2xl transition-all">
            <figure class="px-6 pt-6">
              <div class={`w-full h-48 bg-linear-to-br from-${item.color}-400 to-${item.color}-600 rounded-2xl flex items-center justify-center`}>
