        <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-8">
          {data.maintenance.title}
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {data.maintenance.content.map(item => (
            <div class="space-y-4">
              <div class={`w-full h-64 bg-linear-to-br from-${item.color}-200 to-${item.color}-400 rounded-2xl flex items-center justify-center`}>
                <span class="text-white text-lg font-semibold">[img]</span>
              </div>
              <h3 class={`text-2xl font-bold text-${item.color}-800`}>{item.title}</h3>
              <p class="text-gray-700 leading-relaxed">
                {item.description}
              </p>
            </div>  
          ))}          
        </div>
      </section>
      
      <RequestQuote
        title="쯅ecesitas mantener tu pasto sint칠tico?"
